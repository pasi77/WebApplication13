@model List<CRUDemo.Models.CandidateInfo>
...
<h1>List of STATES</h1>
@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <td colspan="4">
        <input type="submit" value="Submit"/>
    </td>
    @*<table border="1" cellpadding="7">*@
        <table class="table table-striped">
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Html.Hidden("candidates[" + @i + "].ID",
                                     Model[i].ID, new { @readonly = "readonly" })
                    </td>
                    <td>
                        @Html.Label("candidates[" + @i + "].State",
                                  Model[i].State, new { @readonly = "readonly" })
                    </td>
                    <td>
                        @Html.TextBox("candidates[" + @i + "].Republicans",
                                  Model[i].Republicans, new {@onchange = "display(this.id);", size = "2" })
                    </td>
                    <td>
                        @Html.TextBox("candidates[" + @i + "].Democrats",
                                  Model[i].Democrats, new {@onchange = "display(this.id);", size = "2" })
                    </td>
                </tr>
            }
            <tr>
            </tr>
        </table>
        <td colspan="4">
            <input type="submit" value="Submit" />
        </td>
        }
        <script type="text/javascript" src="~/Scripts/editcolor.js"></script>
