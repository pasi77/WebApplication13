@model List<CRUDemo.Models.CandidateInfo>


@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <h1>List of STATES</h1>

    <div class="row">
        <div class="col-xl-6">
            <div class="form-group">


                <table class="table-striped table-sm">

                    <tr>
                        <th scope="col"></th>
                        <th scope="col">State</th>
                        <th scope="col">Republicans</th>
                        <th scope="col">Democrats</th>
                    </tr>
                    @*@for (int i = 0; i < Model.Count; i++)*@
                    @for (int i = 0; i < 27; i++)
                    {

                        <tr>
                            <td>

                                @Html.Hidden("candidates[" + @i + "].ID",
                                             Model[i].ID, new { @readonly = "readonly" })
                            </td>
                            <td>
                                @Html.Hidden("candidates[" + @i + "].State",
                                          Model[i].State)
                                @Html.Label("candidates[" + @i + "].State",
                                        Model[i].State, new { @class = "text-uppercase font-weight-bold" })
                            </td>
                            <td>
                                @Html.TextBox("candidates[" + @i + "].Republicans",
                                          Model[i].Republicans, new { @onchange = "display(this.id);" })
                            </td>

                            <td>
                                @Html.TextBox("candidates[" + @i + "].Democrats",
                                          Model[i].Democrats, new { @onchange = "display(this.id);" })
                            </td>

                        </tr>
                    }



                </table>

            </div>
        </div>
        <div class="col-xl-6">
            <div class="form-group">


                <table class="table-striped table-sm">

                    <tr>
                        <th scope="col"></th>
                        <th scope="col">State</th>
                        <th scope="col">Republicans</th>
                        <th scope="col">Democrats</th>
                    </tr>
                    @for (int i = 27; i < Model.Count; i++)
                    {

                        <tr>
                            <td>

                                @Html.Hidden("candidates[" + @i + "].ID",
                                             Model[i].ID, new { @readonly = "readonly" })
                            </td>
                            <td>
                                @Html.Hidden("candidates[" + @i + "].State",
                                          Model[i].State)
                                @Html.Label("candidates[" + @i + "].State",
                                        Model[i].State, new { @class = "text-uppercase font-weight-bold" })
                            </td>
                            <td>
                                @Html.TextBox("candidates[" + @i + "].Republicans",
                                          Model[i].Republicans, new { @onchange = "display(this.id);" })
                            </td>

                            <td>
                                @Html.TextBox("candidates[" + @i + "].Democrats",
                                          Model[i].Democrats, new { @onchange = "display(this.id);" })
                            </td>


                        </tr>
                    }



                </table>
                <div class="float-md-right">
                    <button type="submit" class="btn btn-secondary">Submit</button>
                </div>
            </div>
        </div>
    </div>




}
<script type="text/javascript" src="~/Scripts/editcolor.js"></script>
